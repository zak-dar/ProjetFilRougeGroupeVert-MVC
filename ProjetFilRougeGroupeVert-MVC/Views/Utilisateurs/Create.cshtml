@model ProjetFilRouge.Models.Utilisateur

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Utilisateur</h4>
<hr />
<div class="row bg-light p-2">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                @if (ViewBag.RoleConnected == "ADMIN")
                {
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Valide" /> @Html.DisplayNameFor(model => model.Valide)
                    </label>
                }
                else
                {
                    <input class="form-check-input" asp-for="Valide" value="False" type="hidden" />
                }
            </div>
            <div class="d-flex justify-content-center flex-column">
                <div class="d-flex justify-content-center">
                    <div class=" p-2">
                        <div class="form-group">
                            <label asp-for="Nom" class="control-label"></label>
                            <input asp-for="Nom" class="form-control" />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center flex-column">
                <div class="d-flex justify-content-center">
                    <div class=" p-2">
                        <div class="form-group">
                            <label asp-for="Prenom" class="control-label"></label>
                            <input asp-for="Prenom" class="form-control" />
                            <span asp-validation-for="Prenom" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-center flex-column">
                <div class="d-flex justify-content-center">
                    <div class=" p-2">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">Adresse Mail</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-center flex-column">
                <div class="d-flex justify-content-center">
                    <div class=" p-2">
                        <div class="form-group">
                            <label asp-for="MotDePasse" class="control-label">Mot De Passe</label>
                            <input asp-for="MotDePasse" class="form-control" type="password" />
                            <span asp-validation-for="MotDePasse" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-center flex-column">
                <div class="d-flex justify-content-center">
                    <div class=" p-2">
                        <div class="form-group">
                            <label asp-for="DateNaissance" class="control-label">Date de Naissance</label>
                            <input asp-for="DateNaissance" class="form-control" type="date" />
                            <span asp-validation-for="DateNaissance" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            @if (ViewBag.RoleConnected == "ADMIN")
            {
                <div class="form-group">
                    <label asp-for="Role" class="control-label"></label>
                    <select asp-for="Role" asp-items="ViewBag.Role" class="form-control">
                        <option>Sélectionner un rôle</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="Role" class="control-label"></label>
                    <select asp-for="Role" asp-items="ViewBag.Role" class="form-control" disabled></select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>      
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
